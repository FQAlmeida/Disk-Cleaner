{
  "compilerOptions": {
    "target": "es2017",
    "strict": true,
    "allowJs": false,
    "module": "ESNext",
    "skipLibCheck": false,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "&": ["node_modules/*"]
    },
    "jsx": "react"
  },
  "include": [
    "src/**/*"
  ],
}
